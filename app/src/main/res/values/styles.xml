<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoundImage">
        <item name="shapeAppearanceOverlay">@style/shapeAppearanceRoundImage</item>
        <item name="android:padding">2dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">4dp</item>
        <item name="android:translationZ">10dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="shapeAppearanceRoundImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="MealName">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#222831</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="ProductDescription">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#AAAAAD</item>
        <item name="android:fontFamily">@font/sfui_display_regular</item>
    </style>

    <style name="MealInfoText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>